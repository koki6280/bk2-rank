<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<% if flash.now[:alert] %>
<p><%= flash.now[:alert] %></p>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
        <%= render 'users/list', user: current_user %>
        <%= render 'books/box', book: @book %>
        </div>


      <div class="col-lg-9">
       <h2>Books</h2>
                <table class="table tablt-striped">
                	<thead>
                		<tr>
                            <th></th>
                			<th>Title</th>
                			<th>Opinion</th>
                		</tr>
                	</thead>
                	<body>
                    <% @books.each do |book| %>
                        <tr>
                        <td>
                            <%= link_to user_path(book.user.id) do %>
                               <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
                            <% end %>
                        </td>
                    	<td><%= link_to book.title, book_path(book.id) %></td>
                    	<td><%= book.body %></td>
                        </tr>
                    <% end %>
                    </body>
                </table>
        </div>
    </div>
</div>



