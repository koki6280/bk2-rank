<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<% if flash.now[:alert] %>
<p><%= flash.now[:alert] %></p>
<% end %>

<div class="sidebar">
<div class="col-lg-3">
<%= render 'users/list', user: @user %>
<%= render 'books/box', book: @book %>
</div>
</div>


<div class="col-lg-9">
<h2>Books</h2>
<table class="table tablt-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th></th>
		</tr>
	</thead>
	<body>
    <% @books.each do |book| %>
        <tr>
    	<td><%= book.title %></td>
    	<td><%= book.body %></td>
        </tr>
    <% end %>
    </body>
</table>
</div>



